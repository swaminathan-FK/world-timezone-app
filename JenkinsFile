	}
	}
	
	stage('Perform Regression Testing'){
	steps{
	bat 'C:\\Users\\Swaminathan\\AppData\\Roaming\\npm\\newman run E:\\personal\\knowledge\\postman\\worldtimezone.postman_collection.json --disable-unicode'
	}
	}
	}
}